<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="library_view_form">
            <field name="name">library.book.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Library Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="author"/>
                                <field name="editor"/>
                                <field name="year_of_edition"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="genre"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                        
                    </sheet>
                
                </form>
            
                
            </field>
            
        </record>
        
        <record model="ir.ui.view" id="library_view_list">
            <field name="name">library.book.list</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree string="Library List">
                    <field name="name"/>
                    <field name="author"/>
                    <field name="year_of_edition"/>
                    <field name="genre"/>
                    
                    
                    
                </tree>
            
            </field>
            
            
            
        </record>
        
        <record model="ir.ui.view" id="library_view_search">
            <field name="name">library.book.search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="author"/>
                    
                </search>
                
            </field>
            
        </record>
        
        
    </data>
 
    
</odoo>